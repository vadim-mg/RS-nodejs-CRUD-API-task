{
  "name": "rs-nodejs-crud-api-task",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start:dev": "npx nodemon --exec ts-node --esm src/index.ts",
    "start:prod": "npm run build && node build/index.js",
    "start:multi": "npm run build && node build/cluster.js",
    "build": "node clean.js && npx tsc --build --verbose",
    "test": "jest",
    "test:api": "jest test.user-api.ts --watchAll",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vadim-mg/RS-nodejs-CRUD-API-task.git"
  },
  "author": "vadim-mg",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vadim-mg/RS-nodejs-CRUD-API-task/issues"
  },
  "homepage": "https://github.com/vadim-mg/RS-nodejs-CRUD-API-task#readme",
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "uuid": "^9.0.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  }
}
